@model List<ContractMonthlyClaimSystem.Models.Lecturer>
@{
    ViewData["Title"] = "Lecturers";
}

<h2>Lecturers</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>All Lecturers</h4>
    <a class="btn btn-primary" asp-action="AddLecturer">
        <i class="fas fa-plus"></i> Add Lecturer
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No lecturers have been added yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Hourly Rate (R)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lecturer in Model)
                {
                    <tr>
                        <td>@lecturer.LecturerId</td>
                        <td>@lecturer.FullName</td>
                        <td>@lecturer.Email</td>
                        <td>@lecturer.HourlyRate.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
