@model List<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Lecturer Dashboard";
    var lecturer = ViewBag.Lecturer as ContractMonthlyClaimSystem.Models.Lecturer;
}

<h2>Lecturer Dashboard</h2>

@if (lecturer != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Welcome, @lecturer.FullName!</h5>
            <p class="card-text">
                <strong>Email:</strong> @lecturer.Email<br />
                <strong>Hourly Rate:</strong> R @lecturer.HourlyRate.ToString("N2")
            </p>
        </div>
    </div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>My Monthly Claims</h4>
    <a class="btn btn-primary" asp-controller="Claim" asp-action="Create" asp-route-lecturerId="@lecturer?.LecturerId">
        <i class="fas fa-plus"></i> Submit New Claim
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h5>No claims submitted yet</h5>
        <p>You haven't submitted any monthly claims. Click the "Submit New Claim" button to get started.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Month</th>
                    <th>Total Hours</th>
                    <th>Total Amount (R)</th>
                    <th>Status</th>
                    <th>Submitted</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.Month</td>
                        <td>@claim.TotalHours.ToString("F1")</td>
                        <td>@claim.TotalAmount.ToString("N2")</td>
                        <td>
                            <span class="badge @(claim.Status == "Submitted" ? "bg-warning" :
                                                                                   claim.Status == "Approved" ? "bg-success" :
                                                                                   claim.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                        @claim.Status
                    </span>
                </td>
                <td>@claim.SubmittedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimId"
                       class="btn btn-sm btn-info"><i class="fas fa-eye"></i> View</a>
                </td>
            </tr>
                        }
            </tbody>
        </table>
    </div>
}

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">@Model.Count(c => c.Status == "Submitted")</h5>
                <p class="card-text">Pending Review</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">@Model.Count(c => c.Status == "Approved")</h5>
                <p class="card-text">Approved</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <h5 class="card-title">@Model.Count(c => c.Status == "Rejected")</h5>
                <p class="card-text">Rejected</p>
            </div>
        </div>
    </div>
</div>
