@model ContractMonthlyClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
    var users = ViewBag.Users as List<ContractMonthlyClaimSystem.Models.User> ?? new List<ContractMonthlyClaimSystem.Models.User>();
}

<h2>Claim Details</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Claim Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Claim ID</dt>
                    <dd class="col-sm-8">@Model.ClaimId</dd>

                    <dt class="col-sm-4">Lecturer</dt>
                    <dd class="col-sm-8">@Model.Lecturer?.FullName ?? "Unknown"</dd>

                    <dt class="col-sm-4">Month</dt>
                    <dd class="col-sm-8">@Model.Month</dd>

                    <dt class="col-sm-4">Total Hours</dt>
                    <dd class="col-sm-8">@Model.TotalHours.ToString("F1")</dd>

                    <dt class="col-sm-4">Total Amount</dt>
                    <dd class="col-sm-8">R @Model.TotalAmount.ToString("N2")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Status == "Submitted" ? "bg-warning" : Model.Status == "Approved" ? "bg-success" : Model.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                            @Model.Status
                        </span>
                    </dd>

                    <dt class="col-sm-4">Submitted</dt>
                    <dd class="col-sm-8">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                    @if (Model.ApprovedBy.HasValue)
                    {
                        <dt class="col-sm-4">Approved By</dt>
                        <dd class="col-sm-8">User #@Model.ApprovedBy</dd>

                        <dt class="col-sm-4">Approved At</dt>
                        <dd class="col-sm-8">@Model.ApprovedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.RejectionComment))
                    {
                        <dt class="col-sm-4">Rejection Reason</dt>
                        <dd class="col-sm-8 text-danger">@Model.RejectionComment</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>

<h4 class="mt-4">Claim Lines</h4>
@if (Model.ClaimLines != null && Model.ClaimLines.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Description</th>
                    <th>Hours</th>
                    <th>Rate (R)</th>
                    <th>Subtotal (R)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.ClaimLines)
                {
                    <tr>
                        <td>@line.Description</td>
                        <td>@line.HoursWorked.ToString("F1")</td>
                        <td>@line.RatePerHour.ToString("N2")</td>
                        <td>@line.Subtotal.ToString("N2")</td>
                    </tr>
                }
                <tr class="table-active">
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td><strong>R @Model.TotalAmount.ToString("N2")</strong></td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">No line items to display.</div>
}

<h4 class="mt-4">Supporting Documents</h4>
@if (Model.Documents != null && Model.Documents.Any())
{
    <div class="list-group">
        @foreach (var doc in Model.Documents)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1">@doc.FileName</h6>
                    <small class="text-muted">Uploaded: @doc.UploadedAt.ToString("yyyy-MM-dd HH:mm")</small><br />
                    <small class="text-muted">Size: @((doc.FileSize / 1024.0).ToString("F1")) KB</small>
                </div>
                <a href="@doc.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-download"></i> Download
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">No documents attached.</div>
}

@if (Model.Status == "Submitted")
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Approver Actions</h5>
        </div>
        <div class="card-body">
            <form asp-action="Approve" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ClaimId" />
                <div class="input-group mb-3">
                    <select name="approverId" class="form-select" required>
                        <option value="">Select Approver</option>
                        @foreach (var user in users)
                        {
                            <option value="@user.UserId">@user.FullName (@user.Role)</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Approve Claim
                    </button>
                </div>
            </form>

            <form asp-action="Reject" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ClaimId" />
                <div class="row">
                    <div class="col-md-4">
                        <select name="approverId" class="form-select" required>
                            <option value="">Select Approver</option>
                            @foreach (var user in users)
                            {
                                <option value="@user.UserId">@user.FullName (@user.Role)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="comment" class="form-control" placeholder="Rejection reason (required)" required />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-times"></i> Reject
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-controller="Claim" asp-action="LecturerDashboard" asp-route-lecturerId="@Model.LecturerId" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>
