
@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-header bg-danger text-white">
                <h4 class="card-title mb-0">Access Denied</h4>
            </div>
            <div class="card-body text-center">
                <i class="fas fa-ban fa-3x text-danger mb-3"></i>
                <h5>You don't have permission to access this page.</h5>
                <p class="text-muted">Please contact your administrator if you believe this is an error.</p>
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">Return to Login</a>
            </div>
        </div>
    </div>
</div>