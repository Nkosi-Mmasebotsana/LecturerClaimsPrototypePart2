@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role") ?? "";
    var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName") ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Contract Monthly Claim System.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    Contract Monthly Claim System
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- LEFT SIDE MENU -->
                    <ul class="navbar-nav">

                        <!-- LECTURER MENU -->
                        @if (role == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Claim" asp-action="LecturerDashboard">
                                    Lecturer Dashboard
                                </a>
                            </li>
                        }

                        <!-- COORDINATOR + MANAGER MENU -->
                        @if (role == "Programme Coordinator" || role == "Academic Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Claim" asp-action="ApproverDashboard">
                                    Approver Dashboard
                                </a>
                            </li>
                        }

                        <!-- HR MENU -->
                        @if (role == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="HR" asp-action="Dashboard">
                                    HR Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Index">
                                    Manage Users
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Claim" asp-action="LecturersList">
                                    Lecturers
                                </a>
                            </li>
                        }

                    </ul>

                    <!-- RIGHT SIDE USER MENU -->
                    <ul class="navbar-nav ms-auto">

                        @if (!string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item text-dark d-flex align-items-center me-2">
                                <span class="fw-bold">@fullName (@role)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Contract Monthly Claim System -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
